def downloadfile(path,file_list):
        for file in file_list:
            if file.lower()=='config':
                ftp.cwd('config')
                for fs in ftp.nlst():
                    with open(path + '\\config\\' + fs, 'wb') as f1:
                        filename = 'RETR ' + fs
                        ftp.retrbinary(filename, f1.write)
                        ftp.cwd('..')
            else:
                with open(path+'\\'+file, 'wb') as f:
                    filename = 'RETR ' + file
                    ftp.retrbinary(filename, f.write)




